<!-- views/resetPassword.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Password Reset Request</title>
  <style>
    /* Reset styles */
    body, html {
      margin: 0;
      padding: 0;
      width: 100%;
      height: 100%;
      background-color: #f4f4f4;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    /* Container styling */
    .container {
      background-color: #ffffff;
      padding: 40px;
      border-radius: 8px;
      max-width: 600px;
      margin: 50px auto;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    /* Header styling */
    .header {
      margin-bottom: 30px;
    }

    .header img {
      width: 120px;
    }

    /* Title styling */
    .title {
      font-size: 24px;
      font-weight: bold;
      color: #222222;
      margin-bottom: 20px;
    }

    /* Content styling */
    .content {
      font-size: 16px;
      line-height: 1.6;
      color: #555555; /* Default text color */
    }

    .content p {
      margin-bottom: 20px;
    }

    .content strong {
      font-weight: 600;
      color: #333333;
    }

    /* Button styling */
    .button {
      display: inline-block;
      padding: 14px 30px;
      background-color: #007bff;
      color: #ffffff !important;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      font-size: 16px;
      transition: background-color 0.3s ease;
      margin-top: 30px;
    }

    .button:hover {
      background-color: #0056b3;
    }

    /* Footer styling */
    .footer {
      font-size: 12px;
      color: #777777;
      margin-top: 40px;
      text-align: center;
    }

    /* Fix purplish color issue */
    .content p, .content strong {
      color: #555555; /* Ensure text color is consistent */
    }

  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <!-- Reference the image using CID -->
      <img src="cid:logoImage" alt="FinanceFlow Logos">
    </div>
    <div class="content">
      <p class="title">Reset Your Password</p>
      <p>Hi <strong>{{name}}</strong>,</p>
      <p>
        You recently requested to reset your password for your FinanceFlow account on
        <strong>{{requestTime}} UTC</strong>. Please click the button below to reset it. This link will expire in
        <strong>{{expiryDuration}}</strong>.
      </p>
      <a href="{{resetLink}}" class="button" role="button" aria-label="Reset Your Password">Reset Your Password</a>
      <p>If you did not request a password reset, please ignore this email or contact our support team if you have any questions.</p>
      <p>Best regards,<br>The FinanceFlow Team</p>
    </div>
    <div class="footer">
      <p>&copy; {{currentYear}} FinanceFlow. All rights reserved.</p>
    </div>
  </div>
</body>
</html>
